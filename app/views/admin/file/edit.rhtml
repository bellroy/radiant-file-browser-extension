<h1 id="edit_page">Edit File/Directory Name</h1>
  <div class="form-area">
  	<% form_tag "" do %>
	    <p class="title">
	      <label for="page_title">File/Directory Name</label>	  
		  <input type='hidden' name='version' value='<%= @file.version %>' />	
	      <%= text_field_tag "file_name", @file.pathname.basename,:class => 'textbox', :maxlength => 255 %>
	    </p>
		<br />
		<p class="buttons">
		  <%= submit_tag "Save changes", :class => 'button' %> or <%= link_to "Cancel", files_path %>
		</p>	
	<% end %>
  </div>	
